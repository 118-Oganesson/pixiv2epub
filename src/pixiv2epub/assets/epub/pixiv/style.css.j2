/* FILE: src/pixiv2epub/assets/epub/pixiv/style.css.j2 */
/*
    このファイルはPixivテーマ用のスタイルシートです。
    まず共通スタイルを _base_style.css.j2 から読み込み、
    その後、Pixiv固有のスタイル（シリーズ名、文字数カウントなど）を追加・上書きします。
*/

/* --- 1. 共通スタイルの読み込み --- */
{% include "_base_style.css.j2" %}

/* --- 2. Pixiv固有の変数の定義（共通定義を上書き・追加） --- */
:root {
    --series-title-color: #777;
    --char-count-bg: rgba(0, 0, 0, 0.3);
    --char-count-text: white;
}

/* --- 3. Pixiv固有のスタイル定義 --- */

/* 小説タイトル（シリーズ名を含むブロック全体） */
/* defaultのh3スタイルをベースにしつつ、line-heightを上書き */
h3[epub|type="title"] {
    line-height: 1.2;
}

/* h3内のシリーズタイトル部分のスタイル */
.series-title-inline {
    color: var(--series-title-color); 
    font-size: 0.8em;
    font-weight: normal;
}

/* 3列テーブルレイアウト用のスタイル */
.cover-meta-table {
    width: 100%;
    border-spacing: 0;
    margin-bottom: 1.5em;
    border-collapse: collapse;
}

/* 中央の画像が入るセル */
.cover-cell {
    width: 33.3%; /* 画像の幅を指定 */
    padding: 0;
}

.cover-cell img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 10px;
}

/* 右側の文字数が入るセル */
.char-count-cell {
    width: 33.35%; /* 残りの空間の半分 */
    vertical-align: top;
    text-align: right;
    padding: 0;
}

/* 左側のスペーサー用セル */
.spacer-cell {
    width: 33.35%; /* 残りの空間の半分 */
    padding: 0;
}

/* 文字数（装飾） */
.char-count {
    display: inline-block;
    background-color: var(--char-count-bg); 
    color: var(--char-count-text); 
    font-size: 0.8em;
    padding: 2px 10px;
    border-radius: 20px;
}